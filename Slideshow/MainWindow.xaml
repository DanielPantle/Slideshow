<Window x:Class="Slideshow.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Slideshow"
        mc:Ignorable="d"
        Title="MainWindow" Height="600" Width="800"
        KeyDown="Window_KeyDown"
        Closing="Window_Closing">
    <Grid>
        <Image Margin="0" Name="image"/>

        <Button Content="Ordner auswählen" HorizontalAlignment="Center" VerticalAlignment="Center" Name="ChooseDirectoryButton" Click="ChooseDirectory_Click"/>
        <TextBox Foreground="White" BorderThickness="0" Background="Transparent" KeyDown="TitleTextBox_KeyDown" Name="TitleTextBox" HorizontalAlignment="Center" Margin="0,0,0,50" TextWrapping="Wrap" VerticalAlignment="Bottom" TextAlignment="Right" IsEnabled="False" IsReadOnly="True" FontSize="48"/>

    </Grid>
</Window>
